generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Todo {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  title       String
  description String
  deadline    DateTime?
  done        Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
